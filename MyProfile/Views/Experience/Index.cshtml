@model IEnumerable<Experience>

<section id="experience" class="experience">
<div class="container" data-aos="fade-up">
    <div class="section-title">
        <h2>Experience</h2>
        <h3>Check our <span>Experiences</span></h3>
        <p>The following entails the list of my work experiences!</p>
    </div>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 box-shadow">
                    <img class="card-img-top" src="/img/portfolio/experiences.png" width="100%" height="225" alt="Card image cap">
                    <div class="card-body">
                        <p class="card-text"> <input type="hidden" asp-for="@item.Id" /></p>
                        <h5 class="card-title">Company Name</h5>
                        <p class="card-text">@item.Name</p>
                        <h5 class="card-title">Location</h5>
                        <p class="card-text">@item.Location</p>
                        <h5 class="card-title">Position Held</h5>
                        <p class="card-text">@item.Role</p>
                    </div>
                </div>

            </div>
        }

    </div>
</div>
</section>

